<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_name"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/id_nameET"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/bg_main_all"
            android:layout_marginLeft="60dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:singleLine="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_phone"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/id_phoneET"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/bg_main_all"
            android:layout_marginLeft="60dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:singleLine="true"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reg_idcard"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/id_idcardET"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/bg_main_all"
            android:layout_marginLeft="60dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:singleLine="true"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:id="@+id/id_lay"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_password"
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/id_password"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@drawable/bg_main_all"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:textSize="14sp"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:inputType="textPassword"
                />

        </RelativeLayout>


        <TextView
            android:id="@+id/id_reg_login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_login"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/id_lay"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>



    <Button
        android:id="@+id/id_regBut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_main_all1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/reg_login_but"
        android:textColor="@color/white"
        />

</LinearLayout>
