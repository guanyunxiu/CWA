<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_marginBottom="5dp"
    >

    <TextView
        android:id="@+id/id_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center_horizontal|center_vertical"
        android:background="@mipmap/icon_yuan"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >

        <TextView
            android:id="@+id/id_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="武帅龙"
            />
        <TextView
            android:text="今日签到"
            android:id="@+id/id_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/id_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址"
            />
        <TextView
            android:id="@+id/id_remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/id_lay"
            android:layout_marginTop="3dp"
            >
            <FrameLayout
                android:id="@+id/id_image1_flv"
                android:layout_width="@dimen/image_height"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/id_image1"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="#ccc"
                    android:scaleType="centerCrop"
                    />
                <ImageView
                    android:id="@+id/id_play_img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/video_play"
                    android:layout_gravity="center"

                    />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/id_image2_flv"
                android:layout_width="@dimen/image_height"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                >
                <ImageView
                    android:id="@+id/id_image2"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="#ccc"
                    android:scaleType="centerCrop"
                    />
                <ImageView
                    android:id="@+id/id_play_img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/video_play"
                    android:layout_gravity="center"
                    />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>
